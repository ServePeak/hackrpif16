<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="100dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/loginbg"
    tools:context=".CreateGroup">

    <ImageView android:id="@+id/group_icon"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@drawable/group"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText android:id="@+id/group_name_input"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/group_icon"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/loginbtn"
        android:hint="Enter Group Name"/>

        <Button android:id="@+id/confirm_create_group_button"
            android:layout_below="@+id/group_name_input"
            android:layout_centerHorizontal="true"
            android:text="Create Group"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:onClick="createGroupButtonListener"/>

</RelativeLayout>